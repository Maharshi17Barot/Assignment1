<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AuctionHouse</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" >
            <div style="background-color: #222629" class="container-fluid">
                <a style="color: #61892F" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AUCTIONHOUSE</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul   class="navbar-nav flex-grow-1">
                        <li style="margin-right:21px" class="nav-item">
                            <a style="background-color: #f76c6c"  class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        <li style="margin-right:21px" class="nav-item">
                            <a style="background-color:#3aafa9"  class="nav-link text-dark" asp-area="" asp-controller="item" asp-action="Index">Item</a>
                        </li>


                        <li style="margin-right:21px" class="nav-item">
                            <a style="background-color:#def2f1" class="nav-link text-dark" asp-area="" asp-controller="item" asp-action="SearchForm">Search</a>
                        </li>
                        

                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

